<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= title %>
  </title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    body {
      background-color: #f8f9fa;
    }

    .sidebar {
      min-height: 100vh;
      background-color: #212529;
      color: white;
      padding: 20px;
    }

    .sidebar a {
      color: #adb5bd;
      text-decoration: none;
      display: block;
      padding: 10px;
      border-radius: 5px;
    }

    .sidebar a:hover,
    .sidebar a.active {
      background-color: #343a40;
      color: white;
    }

    .main-content {
      padding: 30px;
    }
  </style>
</head>

<body>

  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav class="col-md-2 sidebar d-none d-md-block">
        <h4 class="mb-4">Admin Panel</h4>
        <a href="/admin/dashboard">Tableau de bord</a>
        <a href="/admin/portfolio">Portfolio (Projets)</a>
        <a href="/admin/articles">Articles</a>
        <a href="/admin/comments" class="active">Commentaires</a>
        <hr>
        <a href="/portfolio" target="_blank">Voir le site</a>
        <a href="/auth/logout" class="text-danger">Déconnexion</a>
      </nav>

      <!-- Main Content -->
      <main class="col-md-10 main-content">
        <div
          class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">
            <%= title %>
          </h1>
        </div>

        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>#</th>
                <th>Content</th>
                <th>Cible</th>
                <th>Auteur</th>
                <th>Date</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% comments.forEach((comment, index)=> { %>
                <tr>
                  <td>
                    <%= index + 1 %>
                  </td>
                  <td>
                    <div style="max-width: 300px;" class="text-truncate">
                      <%= comment.content %>
                    </div>
                  </td>
                  <td>
                    <span class="badge bg-secondary">
                      <%= comment.artworkId ? 'Projet' : 'Article' %>
                    </span>
                    <small>
                      <%= comment.artwork ? comment.artwork.titre : (comment.article ? comment.article.title : 'N/A' )
                        %>
                    </small>
                  </td>
                  <td>
                    <%= comment.user ? comment.user.email : 'Anonyme' %>
                  </td>
                  <td>
                    <%= new Date(comment.createdAt).toLocaleDateString() %>
                  </td>
                  <td>
                    <button class="btn btn-danger btn-sm"
                      onclick="deleteComment('<%= comment.id %>')">Supprimer</button>
                  </td>
                </tr>
                <% }) %>
                  <% if (comments.length===0) { %>
                    <tr>
                      <td colspan="6" class="text-center">Aucun commentaire trouvé.</td>
                    </tr>
                    <% } %>
            </tbody>
          </table>
        </div>
      </main>
    </div>
  </div>

  <script>
    async function deleteComment(id) {
      if (confirm('Voulez-vous vraiment supprimer ce commentaire ?')) {
        try {
          const response = await fetch(`/comments/${id}`, {
            method: 'DELETE'
          });
          if (response.ok) {
            location.reload();
          } else {
            alert('Erreur lors de la suppression.');
          }
        } catch (err) {
          console.error(err);
          alert('Erreur réseau.');
        }
      }
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>